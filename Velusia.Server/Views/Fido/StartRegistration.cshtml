@model Velusia.Server.ViewModels.Fido.StartRegistration
@{
    ViewData["Title"] = "Passwordless Registration";
}

<h2>Register</h2>
<form asp-action="Register">
    <div class="form-group">
        <label asp-for="DeviceName"></label>
        <input asp-for="DeviceName" class="form-control" required />
        <span asp-validation-for="DeviceName" class="text-danger"></span>
    </div>
    @Html.HiddenFor(x =>x.ReturnUrl)
    <button type="submit" class="btn btn-primary">Register</button>
</form>